{
  "name": "@drgrovellc/semantic-release-ecs-deploy",
  "version": "2.0.10",
  "description": "semantic-release plugin to deploy ecs services",
  "main": "src/index.js",
  "scripts": {
    "lint": "prettier-standard --lint '{src,test}/**/*.js'",
    "ts-compile-check": "tsc -p tsconfig.json --noEmit",
    "test": "echo \"no tests\""
  },
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/drgrovesoftwarellc/semantic-release-ecs-deploy.git"
  },
  "keywords": [
    "release",
    "semantic-release",
    "ecs"
  ],
  "author": "Danny Grove <danny@drgrovellc.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/drgrovesoftwarellc/semantic-release-ecs-deploy/issues"
  },
  "homepage": "https://github.com/drgrovesoftwarellc/semantic-release-ecs-deploy#readme",
  "dependencies": {
    "@semantic-release/error": "4.0.0",
    "aws-sdk": "2.1573.0",
    "awscred": "1.5.0"
  },
  "eslintConfig": {
    "extends": "@eclass"
  },
  "eslintIgnore": [
    "coverage"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.js": [
      "eslint --fix",
      "prettier-standard"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "renovate": {
    "extends": [
      "@eclass:js-lib"
    ],
    "packageRules": [
      {
        "packageNames": [
          "aws-sdk"
        ],
        "automerge": false
      }
    ]
  },
  "nyc": {
    "extends": "nyc-config-common"
  },
  "devDependencies": {
    "@commitlint/cli": "19.0.3",
    "@commitlint/config-conventional": "19.0.3",
    "@eclass/semantic-release-npm-github-config": "4.0.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@types/chai": "4.3.12",
    "@types/mocha": "10.0.6",
    "@types/node": "20.11.25",
    "@types/semantic-release": "20.0.6",
    "chai": "5.1.0",
    "husky": "9.0.11",
    "prettier-standard": "15.0.1",
    "semantic-release": "23.0.2",
    "typescript": "5.4.2"
  }
}
